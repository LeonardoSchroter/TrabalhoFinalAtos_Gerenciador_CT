@model Gerenciador_CT.Repositorio.AulaRepositorio


@{
	ViewData["Title"] = "Adicionar aluno";
}
<div class="text-center">
	<h1>Adicionar novo aluno a aula</h1>
	

	<hr />
	<br />
	<br />
	<div class="mb-3">

		<form class="form-control " Asp-action="AdicionarAlunoAula">
			<input type="hidden" asp-for="aula.Id" />
			@Html.DropDownListFor(model => model.aluno.Id,ViewBag.alunosSelectList as SelectList,"--Selecione o aluno--", new {@class = "form-control"})
			<br />
			<div class="d-grid gap-2">
					<button class="btn btn-primary" type="submit">Adicionar </button>
					<a class="btn btn-dark float-lg-start" asp-action="Index">Voltar</a>
				</div>
		</form>


	</div>

	
</div>