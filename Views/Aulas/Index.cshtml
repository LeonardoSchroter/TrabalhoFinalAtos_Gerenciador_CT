<script type="text/javascript">
	function esconderTabela() {
		var segunda = document.getElementById("segunda");
		var terca = document.getElementById("terca");
		var quarta = document.getElementById("quarta");
		var quinta = document.getElementById("quinta");
		var sexta = document.getElementById("sexta");
		var sabado = document.getElementById("sabado");
		var domingo = document.getElementById("domingo");
		var radios = document.getElementsByName("diaSemana");

		for (var i = 0; i <= radios.length; i++) {

			if (radios[i].checked == true && radios[i].value == "Segunda-feira") {

				segunda.style.display = "block";
				terca.style.display = "none";
				quarta.style.display = "none";
				quinta.style.display = "none";
				sexta.style.display = "none";
				sabado.style.display = "none";
				domingo.style.display = "none";
			}
			else if (radios[i].checked == true && radios[i].value == "Terça-feira") {

				segunda.style.display = "none";
				terca.style.display = "block";
				quarta.style.display = "none";
				quinta.style.display = "none";
				sexta.style.display = "none";
				sabado.style.display = "none";
				domingo.style.display = "none";
			}
			else if (radios[i].checked == true && radios[i].value == "Quarta-feira") {

				segunda.style.display = "none";
				terca.style.display = "none";
				quarta.style.display = "block";
				quinta.style.display = "none";
				sexta.style.display = "none";
				sabado.style.display = "none";
				domingo.style.display = "none";
			}
			else if (radios[i].checked == true && radios[i].value == "Quinta-feira") {

				segunda.style.display = "none";
				terca.style.display = "none";
				quarta.style.display = "none";
				quinta.style.display = "block";
				sexta.style.display = "none";
				sabado.style.display = "none";
				domingo.style.display = "none";
			}
			else if (radios[i].checked == true && radios[i].value == "Sexta-feira") {

				segunda.style.display = "none";
				terca.style.display = "none";
				quarta.style.display = "none";
				quinta.style.display = "none";
				sexta.style.display = "block";
				sabado.style.display = "none";
				domingo.style.display = "none";
			}
			else if (radios[i].checked == true && radios[i].value == "Sabado") {

				segunda.style.display = "none";
				terca.style.display = "none";
				quarta.style.display = "none";
				quinta.style.display = "none";
				sexta.style.display = "none";
				sabado.style.display = "block";
				domingo.style.display = "none";
			}
			else if (radios[i].checked == true && radios[i].value == "Domingo") {

				segunda.style.display = "none";
				terca.style.display = "none";
				quarta.style.display = "none";
				quinta.style.display = "none";
				sexta.style.display = "none";
				sabado.style.display = "none";
				domingo.style.display = "block";
			}
		}


	}


</script>
