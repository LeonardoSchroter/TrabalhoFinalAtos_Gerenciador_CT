				<tr class="table-dark">
					<th>
						Treinador
					</th>
					<th>
						@Html.DisplayNameFor(model => model.aula.FkHorarioNavigation.Dia)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.aula.FkHorarioNavigation.Hora)
					</th>
					<th>Alunos</th>
					<th></th>
				</tr>
			</thead>
