@model Gerenciador_CT.Models.Modalidade

@{
	ViewData["Title"] = "Create";
}

<div class="text-center"></div>
<h1 class="display-4">Adionar nova modalidade</h1>


<hr />

<form asp-action="Create">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="mb-3">
		<label asp-for="Nome" class="control-label"></label>
		<input asp-for="Nome" autocomplete="off" class="form-control" />
		<span asp-validation-for="Nome" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label asp-for="Descricao" class="control-label"></label>
		<input asp-for="Descricao" autocomplete="off" class="form-control " />
		<span asp-validation-for="Descricao" class="text-danger"></span>
	</div>
	<div class="d-grid gap-2">
		<input type="submit" value="Criar" class="btn btn-primary" />
		<a class="btn btn-dark" asp-action="Index">Voltar</a>
	</div>
</form>



@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
