@model Gerenciador_CT.Models.Aluno

@{
	ViewData["Title"] = "Deletar aluno";
}
<div class="text-center">
	<br />
	<h3>Quer mesmo deletar este aluno?</h3>
	<br />
	<div>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Nome)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Nome)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Idade)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Idade)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Cpf)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Cpf)
			</dd>
		</dl>

		<form asp-action="Delete">
			<input type="hidden" asp-for="Id" />
			<div class="d-grid gap-2">
				<a class="btn btn-primary" asp-action="Index">Cancelar</a>
				<input type="submit" value="Deletar" class="btn btn-danger" /> 
				
			</div>

		</form>
	</div>
</div>